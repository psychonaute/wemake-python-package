    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole"
        },
        {
            "name": "Specific File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sandbox.py",
            "console": "internalConsole"
        },
        {
            // used by pytest debug test icon
            "name": "Debug Unit Test",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "internalConsole",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
        }
    ]
}
